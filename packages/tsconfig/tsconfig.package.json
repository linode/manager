{
  "compilerOptions": {
    "target": "esnext",
    "module": "esnext",
    "emitDeclarationOnly": true,
    "declaration": true,
    "esModuleInterop": true,
    "moduleResolution": "bundler",
    "skipLibCheck": true,
    "strict": true,
    "noUnusedLocals": true,
    "declarationMap": true,
    "forceConsistentCasingInFileNames": true,
    "incremental": true,
  },
  "include": [
    "src"
  ]
}