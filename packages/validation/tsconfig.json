{
  "compilerOptions": {
    "target": "esnext",
    "module": "umd",
    "emitDeclarationOnly": true,
    "declaration": true,
    "outDir": "./lib",
    "esModuleInterop": true,
    "moduleResolution": "node",
    "skipLibCheck": true,
    "strict": true,
    "baseUrl": ".",
    "noUnusedLocals": true,
    "forceConsistentCasingInFileNames": true,
    "declarationMap": true,
    "incremental": true
  },
  "include": ["src"],
  "exclude": ["node_modules/**/*", "**/__tests__/*"]
}
