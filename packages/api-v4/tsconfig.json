{
  "compilerOptions": {
    "target": "esnext",
    "module": "esnext",
    "emitDeclarationOnly": true,
    "declaration": true,
    "outDir": "./lib",
    "esModuleInterop": true,
    "moduleResolution": "bundler",
    "skipLibCheck": true,
    "strict": true,
    "baseUrl": ".",
    "rootDir": "src",
    "noUnusedLocals": true,
    "declarationMap": true,
    "composite": true
  },
  "include": [
    "src"
  ],
  "references": [
    { "path": "../validation" }
  ]
}
