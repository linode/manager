{
  "compilerOptions": {
    "target": "esnext",
    "module": "esnext",
    "emitDeclarationOnly": true,
    "declaration": true,
    "outDir": "./lib",
    "esModuleInterop": true,
    "moduleResolution": "bundler",
    "skipLibCheck": true,
    "strict": true,
    "baseUrl": ".",
    "noUnusedLocals": true,
    "declarationMap": true,
    "incremental": true
  },
  "include": [
    "src"
  ]
}
