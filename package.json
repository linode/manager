{
  "name": "root",
  "private": true,
  "license": "Apache-2.0",
  "devDependencies": {
    "husky": "^9.1.6",
    "typescript": "^5.7.3",
    "vitest": "^3.0.5"
  },
  "scripts": {
    "lint": "eslint . --quiet --ext .js,.ts,.tsx",
    "install:all": "bun install --frozen-lockfile",
    "build:sdk": "bun run --filter @linode/api-v4 build",
    "build:validation": "bun run --filter @linode/validation build",
    "build": "bun build:validation && bun build:sdk && bun run --filter linode-manager build",
    "build:analyze": "bun run --filter linode-manager build:analyze",
    "up": "bun install:all && bun build:validation && bun build:sdk && bun start:all",
    "up:expose": "bun install:all && bun build:validation && bun build:sdk && bun start:all:expose",
    "dev": "bun install:all && bun start:all",
    "start:all": "concurrently -n api-v4,validation,ui,manager -c blue,yellow,magenta,green \"bun run --filter @linode/api-v4 start\" \"bun run --filter @linode/validation start\" \"bun run --filter @linode/ui start\" \"bun run --filter linode-manager start\"",
    "start:all:expose": "concurrently -n api-v4,validation,ui,manager -c blue,yellow,magenta,green \"bun run --filter @linode/api-v4 start\" \"bun run --filter @linode/validation start\" \"bun run --filter @linode/ui start\" \"bun run --filter linode-manager start:expose\"",
    "start:manager": "bun run --filter linode-manager start",
    "start:manager:ci": "bun run --filter linode-manager start:ci",
    "clean": "rm -rf node_modules && rm -rf packages/@linode/api-v4/node_modules && rm -rf packages/manager/node_modules && rm -rf packages/@linode/validation/node_modules",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:manager": "bun run --filter linode-manager test",
    "test:sdk": "bun run --filter @linode/api-v4 test",
    "test:search": "bun run --filter @linode/search test",
    "test:ui": "bun run --filter @linode/ui test",
    "package-versions": "bun run --filter @linode/scripts package-versions",
    "storybook": "bun run --filter linode-manager storybook",
    "cy:run": "bun run --filter linode-manager cy:run",
    "cy:e2e": "bun run --filter linode-manager cy:e2e",
    "cy:ci": "bun cy:e2e",
    "cy:debug": "bun run --filter linode-manager cy:debug",
    "cy:component": "bun run --filter linode-manager cy:component",
    "cy:component:run": "bun run --filter linode-manager cy:component:run",
    "cy:rec-snap": "bun run --filter linode-manager cy:rec-snap",
    "changeset": "bun run --filter @linode/scripts changeset",
    "generate-changelogs": "bun run --filter @linode/scripts generate-changelogs",
    "coverage": "bun run --filter linode-manager coverage",
    "coverage:summary": "bun run --filter linode-manager coverage:summary",
    "junit:summary": "bun_SILENT=1 bun run --filter @linode/scripts junit:summary",
    "generate-tod": "bun_SILENT=1 bun run --filter @linode/scripts generate-tod",
    "docs": "bunx vitepress@1.0.0-rc.44 dev docs",
    "prepare": "husky"
  },
  "resolutions": {
    "node-fetch": "^2.6.7",
    "yaml": "^2.3.0",
    "semver": "^7.5.2",
    "cookie": "^0.7.0",
    "nanoid": "^3.3.8"
  },
  "workspaces": {
    "packages": [
      "packages/*",
      "scripts"
    ]
  },
  "version": "0.0.0",
  "volta": {
    "node": "20.17.0"
  },
  "dependencies": {}
}
