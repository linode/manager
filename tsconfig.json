{
  "exclude": [
    "coverage",
    "node_modules",
    "dist",
    "stats.json",
    "assets"
  ],
  "compilerOptions": {
    "allowSyntheticDefaultImports": true,
    "outDir": "./dist/",
    "sourceMap": true,
    "noImplicitAny": true,
    "target": "es5",
    "lib": [ "es6", "dom" ],
    "module": "es6",
    "jsx": "react",
    "allowJs": true,
    "moduleResolution": "node",
    "baseUrl": "./",
    "paths": {
        "~/*": [ "./src/*" ]
    }
  }
}